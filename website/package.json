{
	"name": "website",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "vite dev",
		"build": "npm run build:styles && npm run build:scripts && npm run build:svelte",
		"build:styles": "postcss src/styles/*.css -d static/css/ --no-map",
		"build:scripts": "npm run build:scripts:bootstrap && npm run build:scripts:components",
		"build:scripts:bootstrap": "esbuild src/scripts/* --platform=browser --format=esm  --bundle --minify '--external:/js/*' --legal-comments=external --sourcemap=external --log-level=error --allow-overwrite --outdir=static/js/",
		"build:scripts:components": "rm -r static/js/pewc && mkdir static/js/pewc && cp ../packages/components/ds-* static/js/pewc/ && esbuild static/js/pewc/* --platform=browser --format=esm  --bundle --minify '--external:/js/*' --legal-comments=external --sourcemap=external --log-level=error --allow-overwrite --outdir=static/js/pewc/",
		"build:svelte": "vite build",
		"preview": "vite preview",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"dependencies": {
		"@design-system/core": "file:../packages/core",
		"@design-system/style": "file:../packages/style",
		"@design-system/svelte": "file:../packages/svelte"
	},
	"devDependencies": {
		"@design-system/svelte-preprocess-pewc": "file:../packages/svelte-preprocess-pewc",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.28",
		"postcss-calc": "^9.0.0",
		"postcss-cli": "^11.0.0",
		"postcss-csso": "^6.0.0",
		"postcss-extract-media-query": "^3.0.0",
		"postcss-import": "^16.0.0",
		"postcss-nesting": "^12.0.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^4.0.0",
		"svelte-preprocess": "^5.0.0",
		"svelte-preprocess-markdown": "2.7.3",
		"vite": "^5.0.0",
		"vite-plugin-mkcert": "^1.16.0"
	},
	"overrides": {
		"svelte-preprocess-markdown": {
			"marked": "^12.0.0"
		}
	}
}
