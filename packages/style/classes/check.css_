.check {
  position: relative;
  ::marker {
    content: '';
    position: absolute;
    border-style: solid;
    border-width: 0.2em 0.2em 0 0;
    border-color: var(--color);
    display: inline-block;
    transform: rotate(135deg);
    vertical-align: top;
    inset-block-start: 0.35em;
    height: 0.55em;
    width: 0.95em;
  }
}
